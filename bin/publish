#!/usr/bin/env coffee

ghpages = require 'gh-pages'
path = require 'path'

dist = path.join __dirname, '..'

options =
  logger: console.log
  dotfiles: true
  message: 'Update gh-pages [ci skip]'
  user:
    name: 'Deploy Bot'
    email: 'deploy+bot@example.com'

handle_error = (error) ->
  if error
    console.error error
    process.exit Number(error.errno) or 1

ghpages.publish dist, options, handle_error
