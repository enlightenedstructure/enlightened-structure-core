#!/usr/bin/env coffee

ghpages = require 'gh-pages'
path = require 'path'
require 'shelljs/global'

root = path.join __dirname, '..'
basePath = root

options =
  logger: console.log
  dotfiles: true
  message: 'Update gh-pages [ci skip]'
  user:
    name: 'Deploy Bot'
    email: 'deploy+bot@example.com'

handle_error = (error) ->
  if error
    console.error error
    process.exit Number(error.errno) or 1

exec "rm -rf #{root}/node_modules/gh-pages/.cache"
ghpages.publish dist, options, handle_error
